# APP SETTINGS

# Application name
APP_NAME="Stellexion API"

# Application version
VERSION="1.0.0"

# Environment: development | production
ENV="development"

# Debugging mode
DEBUG=true

# ---------------------------------------------------------

# DATABASE

# Database connection URL (DSN)
# SQLite: sqlite:///./stellexion.db
# PostgreSQL: postgresql+asyncpg://user:password@localhost:5432/dbname
DB_URL="postgresql+asyncpg://user:password@localhost:5432/stellexion"

# ---------------------------------------------------------

# AUTHENTICATION

# Secret key for JWT signing (change this in production!)
JWT_SECRET_KEY="your-secret-key-change-in-production"

# JWT algorithm
JWT_ALGORITHM="HS256"

# Access token expiry time in minutes
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ---------------------------------------------------------

# CORS

# Comma-separated list of allowed origins
CORS_ORIGINS="http://localhost:3000,http://127.0.0.1:3000"